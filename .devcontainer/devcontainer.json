{
  "name": "mcm-context-manager",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bookworm",
  "mounts": [
    "source=mcm-node_modules,target=/workspace/node_modules,type=volume",
    "source=${localEnv:HOME}/Documents/claude-projects,target=/workspace/claude-projects,type=bind,readonly"
  ],
  "forwardPorts": [3000],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"]
    }
  }
}
